// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.bin": true,
        "**/*.hex": true,
        "**/*.uf2": true,
        // crkbd, keebio, sofle
        "keyboards/[!cks]*": true,
        "keyboards/[cks][!reo]*": true,
        "keyboards/[cks][reo][!kef]*": true,
        "keyboards/[cks][reo][kef][!bl]*": true,
        "keyboards/[cks][reo][kef][bl][!die]*": true,
        "keyboards/keebio/[!b]*": true,
        "keyboards/keebio/b[!d]*": true,
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "python.formatting.provider": "yapf",
    "[json]": {
        "editor.formatOnSave": false
    }
}